<!doctype html>
<html>
<head></head>
<body>
{{#foreach posts}}
<article class="{{post_class}}">
  <h2 class="post-title"><a href="{{url}}">{{title}}</a></h2>
  <p class="post-meta">
    <em><time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time></em>
  </p>
  <p>{{excerpt words="50"}} <a class="read-more" href="{{url}}">&raquo;</a></p>
</article>
{{/foreach}}
</body>
</html>
