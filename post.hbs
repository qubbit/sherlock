{{!< default}}

{{#post}}
<img class="post-feature-image" src="{{img_url feature_image}}"/>
<article class="{{post_class}}">
  <header class="post-header">
    <h1 class="post-title">{{title}}</h1>
    <div class="post-meta">
      <span class="post-author">Written by
      {{#author}}
        <a href="{{url}}">{{name}}</a>
      {{/author}}
      </span>
      <span class="post-date-container"> on
        <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">
          {{date format="DD MMMM YYYY"}}
        </time>
      </span>
      {{#tags}}
      <span class="post-tags">
      {{tags prefix=" in "}}
      </span>
      {{/tags}}
    </div>
  </header>
  <div class="post-content">
    {{content}}
  </div>
</article>
{{/post}}
